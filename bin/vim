#!/bin/sh
if [ "$VIMRUNTIME" != "" ]; then
    nvr --servername "$NVIM_LISTEN_ADDRESS" --remote-expr "floaterm#util#edit(0, '$(realpath $1)')"
    #exec daemon nvr $(realpath $1) $2
else
    if [ -e "/tmp/nvimsocket" ]; then
        exec nvim $*
    else
        NVIM_LISTEN_ADDRESS="/tmp/nvimsocket" exec nvim $*
    fi
fi
